<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <com.rti.android.videodemo.util.EditTextPreferenceWithValue
                android:name="Domain ID"
                android:defaultValue="0"
                android:title="Domain ID"
                android:inputType="number" 
                android:key="domainID" 
                android:persistent="true" />
        <com.rti.android.videodemo.util.EditTextPreferenceWithValue
                android:name="Peer List"
                android:defaultValue="239.255.0.1"
                android:dialogMessage="Separate multiple peer addresses with ','"
                android:title="DDS Peer List"
                android:inputType="phone" 
                android:key="peerList" 
                android:persistent="true" />
        <CheckBoxPreference 
                android:title="Use Multicast"
                android:defaultValue="false"
		        android:key="use_multicast_check" 
		        android:persistent="true"/>
 </PreferenceScreen>